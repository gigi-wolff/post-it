<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <div class='btn-group nav_item'>
    <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      Categories <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>  
      <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category) %>
        </li>  
      <% end %>
      <% if logged_in? %>
        <li class='divider'></li>
        <li>
          <%= link_to(new_category_path) do %>
            <i class="icon-plus"></i>
            New Category
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <% if logged_in? %>
    <li>
      <%= link_to 'New Category', new_category_path %> 
    </li>
    <div class='nav_item'>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small'%>
    </div>
    <div class="btn-group nav_item">
     <a class="btn btn-info btn-small" href="#"><i class="icon-user icon-white"></i> <%= current_user.username %></a>  
      <a class="btn btn-info dropdown-toggle btn-small" data-toggle="dropdown" href="#">
        <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li> 
          <%= link_to '<i class="icon-pencil"></i> Edit Profile'.html_safe, edit_user_path(current_user) %>
        </li>
        <li>
          <%= link_to '<i class="icon-user"></i> View Profile'.html_safe, user_path(current_user) %>
        </li>
        <li>
          <%= link_to '<i class="icon-off"></i> Log Out'.html_safe, logout_path(current_user) %>
        </li>
      </ul>
    </div>
  <% else %>
    <li>
      <div class='nav_item'>
        <%= link_to "Register", register_path, class: 'btn btn-success btn-small' %>
      </div>
    </li>
    <li>
      <%= link_to "Login", login_path %>
    </li>
  <% end %>
</ul>