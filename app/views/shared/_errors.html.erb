<!-- obj must be an active record object -->
<% if obj.errors.any? %> <!-- if error array not empty  -->
  <div class='row'>
    <div class='alert alert-error span8'>
      <h5> Please correct the following errors: </h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>